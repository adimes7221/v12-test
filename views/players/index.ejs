<%- include("../partials/header") %>



<div class="container">
	<header class="jumbotron">
		<div class = container>
			<h1> Welcome to Great Gators</h1>
			<p>View the greatest players in Gator football history.</p>
			<p>
			<a class="btn btn-primary btn-lrg" href="/players/new">Add new player</a>	
			</p>
		</div>		
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% players.forEach(function(player){ %>
		<div class=" col-lg-3 col-md-4 col-sm-6">
			<div class="thumbnail">
				<img src="<%= player.image %>">
				<div class="caption">
					<h4><%= player["name"] %> </h4>
				</div>
				<p>
					<a href="/players/<%= player._id%>" class="btn btn-primary">More Info</a>
				</p>
			</div>
			
		</div>
	<% }) %>
	</div>
</div>

<%- include ("../partials/footer") %>