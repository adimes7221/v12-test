<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comment to <%= player.name%></h1>
		<div style="width: 30%; margin: 35px auto;">
			<form action="/players/<%= player._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
				<button class="btn btn-lrg btn-primary btn-block">Submit!</button>
				</div>
				<a href="/players">Go Back</a>
			</form>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>